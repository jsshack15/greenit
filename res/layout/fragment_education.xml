<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdcards.greenit.greenit.EducationFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="ENVIRONMENTAL\nLITERACY"
            android:id="@+id/literacyButton"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/eed"
            android:textStyle="bold" />

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="INDOOR\nAIR QUALITY"
            android:id="@+id/indoorButton"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/iaq"
            android:textStyle="bold" />

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="CREATE\nSIGNAGE"
            android:id="@+id/signageButton"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/dustbin"
            android:textStyle="bold" />

        <Button android:id="@+id/elearningButton"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="E-LEARNING\n"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/el"
            android:textStyle="bold" />

    </GridLayout>

</FrameLayout>
