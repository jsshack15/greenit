<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdcards.greenit.greenit.HospitalFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="SUSTAINABLE HEALTHCARE INFRASTRUCTURE"
            android:id="@+id/infraButton"
            android:layout_row="0"
            android:layout_column="0"
            />

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="EFFICIENT MEDICAL EQUIPMENTS"
            android:id="@+id/equipmentButton"
            android:layout_row="0"
            android:layout_column="1"
            />

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="BIOMEDICAL WASTE MANAGEMENT"
            android:id="@+id/biowasteButton"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button android:id="@+id/deviceButton"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="MEDICAL DEVICE REPROCESSING"
            android:layout_row="1"
            android:layout_column="1"/>

    </GridLayout>

</FrameLayout>
