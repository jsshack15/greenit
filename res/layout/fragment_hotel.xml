<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.sdcards.greenit.greenit.HotelFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="WASTE MANAGEMENT"
            android:id="@+id/wasteButton"
            android:layout_row="0"
            android:layout_column="0"
            />

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="ENERGY EFFICIENCY"
            android:id="@+id/energyButton"
            android:layout_row="0"
            android:layout_column="1"
            />

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="WATER CONSERVATION"
            android:id="@+id/waterButton"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button android:id="@+id/employeeButton"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="EMPLOYEE AWARENESS"
            android:layout_row="1"
            android:layout_column="1"/>

        </GridLayout>

</FrameLayout>
