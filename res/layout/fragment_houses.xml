<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.sdcards.greenit.greenit.HousesFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="INFRASTRUSTURE DESIGN"
            android:id="@+id/structButton"
            android:layout_row="0"
            android:layout_column="0"
            />

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="ENERGY EFFICIENT EQUIPMENT"
            android:id="@+id/enefButton"
            android:layout_row="0"
            android:layout_column="1"
            />

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="EFFICIENT LANDSCAPING"
            android:id="@+id/landButton"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button android:id="@+id/householdButton"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="GREENER IN YOUR HOUSEHOLD"
            android:layout_row="1"
            android:layout_column="1"/>

    </GridLayout>

</FrameLayout>
