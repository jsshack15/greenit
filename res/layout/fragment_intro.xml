<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.sdcards.greenit.greenit.IntroFragment"
    android:background="#4c8439">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="WHAT\n"
            android:id="@+id/whatButton"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/what"
            android:textStyle="bold"
            android:textSize="30dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="WHY\n"
            android:id="@+id/whyButton"
            android:layout_row="0"
            android:layout_column="1"
           android:background="@drawable/why"
            android:textStyle="bold"
            android:textSize="30dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="HOW\n"
            android:id="@+id/howButton"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/how"
            android:textStyle="bold"
            android:textSize="30dp" />

        <Button android:id="@+id/exampleButton"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:text="SILVER LINING"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/renew"
            android:textStyle="bold"
            android:textSize="30dp" />

    </GridLayout>

</FrameLayout>
