<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdcards.greenit.greenit.UniversalFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal">

    <Button
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="LEED\nCERTIFICATION\n"
        android:id="@+id/leedButton"
        android:layout_row="0"
        android:layout_column="0"
        />

    <Button
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="3 R's OF\nSUSTAINABLE\nDEVELOPEMENT"
        android:id="@+id/rButton"
        android:layout_row="0"
        android:layout_column="1"
        />

    <Button
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="RENEWABLE\nRESOURCES\n"
        android:id="@+id/renewableButton"
        android:layout_row="1"
        android:layout_column="0"/>

    <Button android:id="@+id/modelButton"
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="INFRASTRUCTURE MODELLING"
        android:layout_row="1"
        android:layout_column="1"/>
    </GridLayout>

</FrameLayout>
