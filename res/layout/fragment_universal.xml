<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdcards.greenit.greenit.UniversalFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal">

    <Button
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="LEED\nCERTIFICATION\n"
        android:id="@+id/exteriorButton"
        android:layout_row="0"
        android:layout_column="0"
        />

    <Button
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="3 R's OF\nSUSTAINABLE DEVELOPEMENT"
        android:id="@+id/ieqButton"
        android:layout_row="0"
        android:layout_column="1"
        />

    <Button
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="GREEN\nWORK\n"
        android:id="@+id/workButton"
        android:layout_row="1"
        android:layout_column="0"/>

    <Button android:id="@+id/geoButton"
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="GEOTHERMAL\nHEATING AND\nCOOLING"
        android:layout_row="1"
        android:layout_column="1"/>
    </GridLayout>

</FrameLayout>
