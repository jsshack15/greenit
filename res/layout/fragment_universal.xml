<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdcards.greenit.greenit.UniversalFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

    <Button
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:id="@+id/leedButton"
        android:layout_row="0"
        android:layout_column="0"
        android:textStyle="bold"
        android:text="\n \n"
        android:background="@drawable/ld"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="\n \n"
        android:id="@+id/rButton"
        android:layout_row="0"
        android:layout_column="1"
        android:textStyle="bold"
        android:background="@drawable/r3"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="RENEWABLE\nRESOURCES\n"
        android:id="@+id/renewableButton"
        android:layout_row="1"
        android:layout_column="0"
        android:textStyle="bold"
        android:background="@drawable/ren"
        android:textSize="20dp" />

    <Button android:id="@+id/modelButton"
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:text="INFRASTRUCTURE\nMODELLING\n"
        android:layout_row="1"
        android:layout_column="1"
        android:textStyle="bold"
        android:background="@drawable/inf"
        android:textSize="20dp"
        android:textColor="#FFF" />
    </GridLayout>

</FrameLayout>
